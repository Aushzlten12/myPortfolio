<header
  id="main-header"
  class="flex justify-center py-5 w-fit mx-auto sticky top-3 z-50 px-6 rounded-xl bg-slate-800"
>
  <nav
    class="flex
  flex-row
  sm:gap-x-10
  gap-x-5
  opacity-80
  sm:text-base
  text-[14px]"
  >
    <a href="#top" id="link-top" class="nav-link hover:text-yellow-500/90"
      >Inicio</a
    >
    <a
      href="#experiencia"
      id="link-experiencia"
      class="nav-link hover:text-yellow-500/90">Experiencia</a
    >
    <a
